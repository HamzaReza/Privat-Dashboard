# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Paddle (https://sandbox.paddle.com for testing, https://vendors.paddle.com for production)
# Client Token: Settings → API → Client-side token
NEXT_PUBLIC_PADDLE_CLIENT_TOKEN=test_your-client-token
# "sandbox" or "production"
NEXT_PUBLIC_PADDLE_ENVIRONMENT=sandbox
# Server-side API key: Settings → API → Secret keys
PADDLE_API_KEY=your-api-key
# Webhook secret: Settings → Notifications → your endpoint → signing secret
PADDLE_WEBHOOK_SECRET=your-webhook-secret

# Paddle Price IDs — create one one-time price per credit package in your Paddle dashboard
PADDLE_PRICE_ID_STARTER=pri_
PADDLE_PRICE_ID_SMALL=pri_
PADDLE_PRICE_ID_MEDIUM=pri_
PADDLE_PRICE_ID_PRO=pri_
PADDLE_PRICE_ID_BUSINESS=pri_
